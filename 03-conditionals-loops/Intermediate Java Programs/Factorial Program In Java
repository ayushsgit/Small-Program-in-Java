//Factorial Program In Java

package com.ayush;

import java.util.Scanner;

public class Main{
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.print("Enter the number : ");
        int num = in.nextInt();
        int fact = 1;
        int n = 1;

        if (num == 0){
            fact = 1;
        }
        else {
            while (n <= num){
                fact = fact * n;
                n = n + 1;
            }
        }

        System.out.print("Factorial of " +num+ " is " +fact);
    }
}

