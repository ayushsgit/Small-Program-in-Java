package com.ayush;

import java.util.Scanner;

public class Main{
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int n = in.nextInt();
        int count = 0;

        while(n>0){
            int rem = n % 10;
            n = n / 10;
            if(rem == 7)
            {
            count ++;
            }
        }
        System.out.print(count);
    }
}


